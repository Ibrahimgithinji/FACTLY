# Auto detect text files and normalize line endings to LF
* text=auto

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Python
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# JavaScript/Node
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# Configuration
.gitignore text eol=lf
.gitattributes text eol=lf
.env.example text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.otf binary
*.db binary
*.sqlite binary
*.sqlite3 binary
