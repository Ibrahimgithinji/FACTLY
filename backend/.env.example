# Example environment variables for FACTLY backend
# Copy this file to `.env` and fill in the correct values before running.

# Django Secret Key - MUST be unique and random in production
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-random-secret-key-here

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS origins (comma-separated) - default allows localhost:3000 for development
ALLOWED_CORS=http://localhost:3000

# Email Configuration (for password reset functionality)
# Using Gmail: requires App-specific password (not your main Google password)
# For Gmail: https://myaccount.google.com/apppasswords
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@factly.com

# Password Reset Configuration
PASSWORD_RESET_TIMEOUT_HOURS=24
FRONTEND_URL=http://localhost:3000

# Google Fact Check API
# Note: Google Fact Check API requires the API key as a query parameter (API design constraint).
# The key is NOT exposed in logs/history due to rate limiting wrapper.
GOOGLE_FACT_CHECK_API_KEY=your_google_api_key_here

# NewsLdr API (optional)
# Note: The API key is passed via Authorization header (Bearer token) to avoid logging exposure.
NEWSLDR_API_KEY=your_newsldr_api_key_here

# Application settings
CACHE_TTL=3600
MAX_API_REQUESTS_PER_MINUTE=60

# Security settings (for production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
X_FRAME_OPTIONS=DENY

# Upload limits (bytes)
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
